{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "order": {
                "user_id": 100,
                "payment_id": "ABCD1234",
                "products": [
                    {
                        "id": 10,
                        "name": "mens shirt",
                        "quantity": 1,
                        "base_price": 19.99,
                        "modifier_id": 3,
                        "promotion_id": 1,
                        "coupon_id": 4
                    }
                ]
            }
        }    
    ],
    "required": [
        "order"
    ],
    "properties" : {
        "order": {
            "type": "object",
            "required": [
                "user_id",
                "payment_id",
                "products"
            ],
            "properties": {
                "user_id": {
                    "$id": "#/properties/user_id",
                    "type": "integer",
                    "title": "The user_id schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": 0,
                    "examples": [
                        100
                    ]
                },
                "payment_id": {
                    "$id": "#/properties/payment_id",
                    "type": "string",
                    "title": "The payment_id schema",
                    "description": "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": [
                        "ABCD1234"
                    ]
                },
                "products": {
                    "$id": "#/properties/products",
                    "type": "array",
                    "items": {"$ref": "#/definitions/product"}
                }
            }
        }
    },
    "definitions": {
        "product": {
            "type": "object",
            "required": [
                "id",
                "name",
                "quantity",
                "base_price"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "title": "Product Identifier",
                    "description": "The ID from the associated product",
                    "minimum": 1,
                    "examples": [ 10 ]
                },
                "name": {
                    "type": "string",
                    "title": "Product Name",
                    "description": "The name from the associated product",
                    "examples": [ "shirt" ]
                },
                "quantity": {
                    "type": "integer",
                    "title": "Product Quantity",
                    "description": "The quantity of the associated product ordered",
                    "minLength": 1,
                    "examples": [ 1 ]
                },
                "base_price": {
                    "type": "number",
                    "title": "Product Base Price",
                    "description": "The non-discounted base-price of the associated product ordered",
                    "minimum": 0.0,
                    "examples": [ 19.99 ]
                },
                "modifier_id": {
                    "type": "integer",
                    "title": "Modifier Identifier",
                    "description": "The ID from the associated modifier",
                    "minimum": 1,
                    "examples": [3]
                },
                "promotion_id": {
                    "type": "integer",
                    "title": "Promotion Identifier",
                    "description": "The ID from the associated promotion",
                    "minimum": 1,
                    "examples": [1]
                },
                "coupon_id": {
                    "type": "integer",
                    "title": "Coupon Identifier",
                    "description": "The ID from the associated coupon",
                    "minimum": 1,
                    "examples": [4]
                }
            }
        }
    },
    "additionalProperties": true
}